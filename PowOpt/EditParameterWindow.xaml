<Window x:Class="PowOpt.EditParameterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать параметр" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Название параметра:" Margin="10" Grid.Row="0"/>
        <TextBox Text="{Binding ParameterName}" Margin="10" Grid.Row="1"/>

        <Button Content="Сохранить" Margin="10" Grid.Row="2" HorizontalAlignment="Right" Command="{Binding SaveCommand}" />
    </Grid>
</Window>
